  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="text" name="newPostTitle" class="form-control" id="exampleInputEmail1" autofocus>
    </div>
    <div class="form-group">
      <label for="comment">Comment:</label>
      <textarea name="newPostBody" class="form-control" rows="5" id="comment"></textarea>
