<div class="innerText">
    <h1>Home</h1>
    <p><%= startingContent[0] %><span class="clue"><%= startingContent[1] %></span></p>
  <% posts.forEach(function(post) { %>
    <h1><%= post.title %></h1>
    <p class="content"><%= post.content.substring(0,130) %>...</p>
    <a href="/posts/<%= post._id %>">Read More</a>
  <% }); %>
</div>

